<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f0f0f0"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />
    <com.yeucheng.yue.widget.DampScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/setuserinfo"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp16"
                android:background="@drawable/btn_list_item_bg"
                android:layout_height="@dimen/dp48">
                <TextView
                    android:layout_width="@dimen/dp0"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp14"
                    android:layout_gravity="center"
                    android:text="@string/setuserinfo"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp16"
                    android:src="@drawable/right_arrow__shap"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/aboutyue"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp16"
                android:background="@drawable/btn_list_item_bg"
                android:layout_height="@dimen/dp48">
                <TextView
                    android:layout_width="@dimen/dp0"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp16"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp14"
                    android:layout_gravity="center"
                    android:text="@string/aboutyue"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp16"
                    android:src="@drawable/right_arrow__shap"/>
            </LinearLayout>
            <Button
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp8"
                android:layout_marginRight="@dimen/dp8"
                android:layout_marginTop="@dimen/dp16"
                android:text="@string/exit"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18" />

        </LinearLayout>
    </com.yeucheng.yue.widget.DampScrollView>
</LinearLayout>
