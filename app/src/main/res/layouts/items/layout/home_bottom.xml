<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp56"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/flCart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/cartNum"
                style="@style/home_wait_text_num_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="99+" />

            <RadioButton
                android:id="@+id/chat"
                style="@style/main_activity_tab_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableTop="@drawable/message_selector"
                android:text="@string/message" />

        </FrameLayout>

        <RadioButton
            android:id="@+id/contact"
            style="@style/main_activity_tab_style"
            android:drawableTop="@drawable/contacts_selector"
            android:text="@string/contacts" />


        <RadioButton
            android:id="@+id/moment"
            style="@style/main_activity_tab_style"
            android:drawableTop="@drawable/moments_selector"
            android:text="@string/moments" />

        <RadioButton
            android:id="@+id/service"
            style="@style/main_activity_tab_style"
            android:drawableTop="@drawable/mine_selector"
            android:text="@string/service" />
    </LinearLayout>
</merge>
