<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_newfriends"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true">

        <com.yeucheng.yue.widget.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp32"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp16"
            android:src="@drawable/yue" />

        <TextView
            android:id="@+id/tv_newfriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_toRightOf="@id/iv_avatar"
            android:text="@string/new_friends"
            android:textColor="#353535"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_unread"
            android:layout_width="@dimen/dp16"
            android:layout_height="@dimen/dp16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp32"
            android:background="@drawable/unread_count_bg"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp14"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/re_chatroom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true">

        <com.yeucheng.yue.widget.CircleImageView
            android:id="@+id/iv_avatar2"
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp32"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp16"
            android:src="@drawable/yue" />

        <TextView
            android:id="@+id/tv_chatroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_toRightOf="@id/iv_avatar2"
            android:text="@string/group"
            android:textColor="#353535"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/publicservice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true">

        <com.yeucheng.yue.widget.CircleImageView
            android:id="@+id/iv_avatar4"
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp32"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp16"
            android:src="@drawable/yue" />

        <TextView
            android:id="@+id/tv_servicebrand_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_toRightOf="@id/iv_avatar4"
            android:text="@string/public_service"
            android:textColor="#353535"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:background="#d9d9d9" />

    <RelativeLayout
        android:id="@+id/contact_me_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:background="@drawable/btn_list_item_bg"
        android:clickable="true">

        <com.yeucheng.yue.widget.CircleImageView
            android:id="@+id/contact_me_img"
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp32"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp16" />

        <TextView
            android:id="@+id/contact_me_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_toRightOf="@id/contact_me_img"
            android:ellipsize="end"
            android:lines="1"
            android:maxLength="32"
            android:textColor="#353535"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>

</LinearLayout>