<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_back">

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="@dimen/dp32"
        android:layout_height="@dimen/dp32"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="@dimen/dp32"
        android:orientation="horizontal"
        android:padding="@dimen/dp4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_back_black" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/newpasswordcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/back"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginTop="@dimen/dp16"
        app:counterEnabled="false"
        app:errorTextAppearance="@style/TextErrorAppearance"
        app:hintTextAppearance="@style/HintAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/newpassword"
            style="@style/InputEditTextstyle"
            android:hint="@string/set_newpassword" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/newpasswordcontainerfir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newpasswordcontainer"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginTop="@dimen/dp16"
        app:counterEnabled="false"
        app:errorTextAppearance="@style/TextErrorAppearance"
        app:hintTextAppearance="@style/HintAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/newpasswordfir"
            style="@style/InputEditTextstyle"
            android:hint="@string/set_newpasswordfir" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp48"
        android:layout_below="@id/newpasswordcontainerfir"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:layout_marginTop="@dimen/dp32"
        android:text="@string/infr"
        android:textColor="@color/white" />
</RelativeLayout>